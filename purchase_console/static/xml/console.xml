<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="purchase_console.console">
        <div class="col-md-12">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-3">
                        <div class="info_header_left"/>
                    </div>
                    <div class="col-md-8">
                        <div class="info_header_right"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="buttons_placeholder"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="content_placeholder"/>
        </div>
    </t>
    <t t-name="purchase_console.action_buttons">
        <div class="btn-group" role="toolbar" aria-label="...">
          <a href="#" class="btn btn-default btn-sm" role="group" aria-label="..."><i class="fa fa-save"></i> Save</a>
          <a t-att-href='"/web/#id=" + widget.requisition_id + "&#38;view_type=form&#38;model=purchase.requisition"' class="btn btn-default btn-sm quit" role="group" aria-label="..."><i class="fa fa-stop"></i> Quit</a>
          <a href="#" class="btn btn-default btn-sm" role="group" aria-label="..."><span  class="badge"><i class="fa fa-refresh"></i> <t t-esc="lines"/></span> Articles Found</a>
        </div>
    </t>
    <t t-name="purchase_console.header_left">
        <h3>Requsition: <t t-esc="name"/></h3>
    </t>
    <t t-name="purchase_console.header_right">
            <div class="change_partner_container">
            </div>
            <div class="row"></div>
            <div class="row">Buy Inventory for 45 Days</div>
    </t>
    <t  t-name="purchase_console.table_content">
        <table class="table table-condensed table-hover">
            <thead>
                <tr class="text-center">
                    <th></th>
                    <th>Code</th>
                    <th>Model</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Axelor</th>
                    <th>Bank</th>
                    <th>Asustek</th>
                    <th>Quoted</th>
                    <th>Stock</th>
                    <th>On Order</th>
                    <th>Sales/Week</th>
                    <th>Time</th>
                    <th>Order</th>
                    <th>Included</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    <th></th>
                    <th>Code</th>
                    <th>Model</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Axelor pick</th>
                    <th>Bank pick</th>
                    <th>Asustek pick</th>
                    <th>Quoted</th>
                    <th>Stock</th>
                    <th>On Order</th>
                    <th>Sales/Week</th>
                    <th>Time</th>
                    <th>Order</th>
                    <th>Included</th>
                </tr>
            </tbody>
            <tfooter>
            </tfooter>
        </table>
    </t>
</templates>